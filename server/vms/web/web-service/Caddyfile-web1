# /etc/caddy/Caddyfile
{
    log {
        level INFO
    }
}

# Escuchar en el puerto 80 para tr√°fico interno desde el LB
:80 {

    root * /var/www/gponlab
    file_server

    handle /health {
        respond "OK - web2 healthy" 200
    }

    log {
        output file /var/log/caddy/web1-access.log {
            roll_size 10mb
            roll_keep 5
        }
    }
}
